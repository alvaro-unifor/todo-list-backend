<%- include("partials/header") %>
<%- include("partials/navbar") %>
<div class="d-flex flex-row justify-content-center">
    <form class="w-50 mt-3 d-flex flex-column align-items-center row g-3 needs-validation" novalidate action="<%= isUpdate ? `/tasks/${task.id}/update` : '/tasks/new' %>" method="post">
        <h2 class="text-center mt-3">Cadastrar nova tarefa</h2>
        <input type="hidden" id="inputId" name="id" value="<%= isUpdate ? task.id : ''  %>">
        <div class="mt-3">
            <label for="inputName" class="form-label">Nome</label>
            <input type="text" class="form-control" id="inputName" name="name" value="<%= isUpdate ? task.name : ''  %>" required>
        </div>
        <div class="mt-3">
            <label for="inputDescription" class="form-label">DescricÃ£o</label>
            <textarea rows="5" class="form-control" id="inputDescription" name="description" required><%= isUpdate ? task.description : ''  %></textarea>
        </div>
        <div class="mt-3">
            <input class="form-check-input" type="checkbox" id="isFinishedCheck" name="isFinished" <%= isUpdate && task.isFinished ? "checked" : "" %> >
            <label class="form-check-label" for="isFinishedCheck">
                Tarefa finalizada
            </label>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary w-100 mt-3">Entrar</button>
        </div>
    </form>
</div>
<%- include("partials/footer") %>