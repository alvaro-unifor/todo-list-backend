<%- include("partials/header") %>
<div class="d-flex flex-row justify-content-center">
    <form class="w-50 mt-3 d-flex flex-column align-items-center row g-3 needs-validation" novalidate action="/register" method="post">
        <h2 class="text-center mt-3">Registrar nova conta</h2>
        <div class="mt-3">
            <label for="inputName" class="form-label">Nome</label>
            <input type="text" class="form-control" id="inputName" name="name" required>
        </div>
        <div class="mt-3">
            <label for="inputEmail" class="form-label">E-mail</label>
            <input type="email" class="form-control" id="inputEmail" name="email" required>
            <div class="invalid-feedback">
                Endereço de e-mail inválido.
            </div>
        </div>
        <div class="mt-3">
            <label for="inputPassword" class="form-label">Senha</label>
            <input type="password" class="form-control" id="inputPassword" name="password" required minlength="6">
            <div class="invalid-feedback">
                Formato de senha inválido.
            </div>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary w-100 mt-3">Entrar</button>
        </div>
    </form>
</div>
<%- include("partials/footer") %>